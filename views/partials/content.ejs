<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Simple Table</title>
</head>

<style>

    h1{
        /* background-color: red; */
        /* background-color: red; */
        
    }
    .tableDiv{
        /* background-color: white; */
        padding: 30px;
        width: 100%;
    }
    table{
        margin-top: 5rem;
        border-collapse: collapse;
        width: 100%;
        text-align: center;
    }
    .folderDiv{
        display: flex;
        margin-left: 5rem;
        /* justify-content: center; */
        gap: 20px;
        align-items: center;
    }

    img{
        height: 25px;width: 25px;
    }

    tr {
        transition: background-color 0.5s ease-in-out;
        border-radius: 10px;
    }

    tr:hover{
        background-color: rgb(85, 84, 84);
    }
    .hidden{
        display: none;
    }

</style>

<body>

    <div class="tableDiv" >
        <h1> <a href="/dashboard" > Home </a></h1>
        <table cellpadding="0" cellspacing="0">
            <thead>
                <tr style="height: 3rem;" >
                    <th>Name</th>
                    <th>Size</th>
                    <th>Created</th>
                </tr>
            </thead>
            
             <% if (folders && Array.isArray(folders) && folders.length > 0) { %>
             <% folders.forEach((value) => { %>
                <tr>
                    <td style="height: 3rem;" >
                        <div class="folderDiv" >
                            <img  src="/assets/foldernew.svg">
                            <button onclick="window.location.href = '/foldercontents/?id=<%=value.id%>' " > <%= value.folder_name%> </button>
                        </div>
                    </td>
                    <td> -- </td>
                    <td> <%= value.created_at.toLocaleString() %> </td>
                </tr>
             <% }) %>
             <% } %>
             
             <% if(files && Array.isArray(files) && files.length > 0){%>
                <%files.forEach((value) => {%>
                    <tr>
                        <td style="height: 3rem;">
                            <div class="folderDiv" >
                                <img src="/assets/file.svg">
                                <button> <%= value.originalname %> </button>
                            </div>                            
                        </td>
                        <td> <%= (value.size / (1024 * 1024)).toFixed(2) %> MB </td>

                    </tr>
                <%})%>
             <%}%>
        </table>
    </div>


    <script>

    </script>
</body>
</html>
